{% extends 'template.twig' %}
{% block main %}
<!-- Header -->
<section class="breadcrumb-bg">                
    <div class="theme-container container ">                       
        <div class="site-breadcumb white-clr">                        
            <h2 class="section-title"> <span class="light-font"> </span> <strong class="clr-txt">
                {% for title in app_global._menu %}
                    {% if title.url == params.page %}
                        {{ title.label }}
                    {% endif %}
                {% endfor %}
                </strong>
            </h2>
        </div>  
    </div>
</section>
<!-- /Header -->


<!-- Shop Starts-->
<section class="contact-wrap sec-space-bottom">
    <div class="container rel-div pt-50">
        <div class="row">
            <div class="col-md-8">
                <h3 class="fsz-25 text-center"><span class="light-font">Franchise </span> <strong>FORM</strong>  </h3> 
                <h4 class="sub-title-1 text-center">Thank you for taking the time in writting us, we will try to respond to your email asap!</h4>
                <div class="contact-form pt-50">
                    <form class="contact-form row" data-type="franchise" data-msg="<strong>Franchises Form Submitted!</strong> We will be in touch soon." id="contact-form">
                        <div class="form-group col-sm-4">
                            <input class="form-control" placeholder="Name" name="Name" id="Name" required="" type="text">
                        </div>
                        <div class="form-group col-sm-4">
                            <input class="form-control" placeholder="Email" name="Email" id="Email" required="" type="email">
                        </div>
                        <div class="form-group col-sm-4">
                            <input class="form-control" placeholder="Phone" name="Phone" id="Phone" type="text">
                        </div>
                        <div class="form-group col-sm-12">
                            <input class="form-control" placeholder="Franshise location" name="address" id="address" type="text">
                        </div>
                        <div class="form-group col-sm-12">
                            <textarea class="form-control"  placeholder="Message" name="Message" id="Message" cols="12" rows="4"></textarea>
                        </div>
                        <div class="form-group col-sm-12 text-center pt-15">                                               
                            <button class="theme-btn" type="submit"> <strong> SEND EMAIL </strong> </button>                                            
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-details">
                    <h3 class="fsz-25"><span class="light-font">Coco 4 You  </span> <strong>Contact Info </strong>  </h3> 
                    <p>Miami, FL</p>
                    <ul>
                        <li><strong>Call:     </strong><i><a href="tel:{{ app_global._phone.link }}">+{{ app_global._phone.show }}</i></a></li>
                        <li><strong>Email:    </strong><i><a href='mailto:{{ app_global._email }}'>{{app_global._email}}</a> </i></a></li>
                        <li><strong>Facebook: </strong><i><a href='{{ app_global._facebook }}'> @coco4youusa </a> </i> </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>                
</section>
{% endblock %}
{% block custom_js %}
<script src="assets/js/theme-ajax-mail.js" type="text/javascript"></script>
{% endblock %}
